set.seed(10)
Fun <- function(k){as.data.frame(rbinom(length(py1a$time), 1, prob = py1a[[4]]))}
a <- lapply(1:10, Fun)

b = list()
for(n in 1:10){ 
  b[[n]] <- a[[n]][1]
}
b = do.call(cbind, b)

c <- as.data.frame(rowMeans(b))
colnames(c) <- c("probr")

