#EXPORT TO CVS USE IN PYTHON

attach(vf2v)
vf2v$period[4<=month & month<=9] <- "Summer"
vf2v$period[1<=month & month<=3] <- "Winter"
vf2v$period[10<=month & month<=12] <- "Winter"
detach(vf2v)


attach(vf2v)
vf2v$block[6<=hour & hour<=9] <- "peak1"
vf2v$block[13<=hour & hour<=16] <- "peak2"
vf2v$block[20<=hour & hour<=21] <- "off"
vf2v$block[10<=hour & hour<=12] <- "peak1"
vf2v$block[17<=hour & hour<=19] <- "peak2"
vf2v$block[1<=hour & hour<=5] <- "off"
vf2v$block[22<=hour & hour<=24] <- "off"
detach(vf2v)

#vf2v <- cbind(vf2v, dummy(vf2v$block, sep = "_"))

attach(vf2v)
vf2v$week[day=="Mo" | day=="Tu" | day=="W" | day=="Th" | day=="Fr" ] <- "work"
vf2v$week[day=="Sa" | day=="Su" ] <- "end"
detach(vf2v)

#vf2v <- vf2v[,-c(19:20)]
write.csv(vf2v, file="i1rv.cvs")
#ordering
vf2vo <- vf2v[order(vf2v[,c(1)]),]
write.csv(vf2vo, file="i1rvo.cvs")

#with clustered_ids
attach(vf2vo)
vf2vo$type[tech=="braunk" | tech=="gascc" | tech=="gasoc" | tech=="gasst" | tech=="oil" | tech=="oiloc" | tech=="skonv" | tech=="steink" ] <- "FF"
vf2vo$type[tech=="gaschp" | tech=="kerne" | tech=="pump" | tech=="serne"| tech=="wasser" ] <- "MUST"
vf2vo$type[tech=="windon" | tech=="windoff"] <- "REN"
detach(vf2vo)
vf2vo$clustering_ids <- paste(vf2vo$type, vf2vo$market_ids)
vf2vo$clustering_ids <- gsub('\\s+', '', vf2vo$clustering_ids)
colnames(vf2vo)[colnames(vf2vo) == "product_ids"] <- "firmprod"
write.csv(vf2vo, file="i1rvc.cvs")

